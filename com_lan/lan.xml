<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="2.5.0" method="upgrade">
	<name>COM_LAN</name>
	<creationDate>2014-04-19</creationDate>
	<author>Shadow Reaper</author>
	<authorEmail>shadowreaper@shadowreaper.net</authorEmail>
	<authorUrl>http://www.shadowreaper.net</authorUrl>
	<copyright>Daniel Johnson, 2014</copyright>
	<license>GPL v2.0</license>
	<version>0.1.0</version>
	<description>COM_LAN_DESCRIPTION</description>
	
	<install>
  		<sql>
    		<file charset="utf8" driver="mysql">install.mysql.sql</file>
  		</sql>
	</install>
	
	<files folder="site">
		<folder>assets</folder>
		<folder>controllers</folder>
		<folder>helpers</folder>
		<folder>images</folder>
		<folder>language</folder>
		<folder>models</folder>
		<folder>tables</folder>
		<folder>views</folder>
		<folder>ipn</folder>
		<filename>index.html</filename>
		<filename>lan.php</filename>
	</files> 

	<scriptfile>install.php</scriptfile>
	
	<languages folder="site">
		<language tag="en-GB">language/en-GB/en-GB.com_lan.ini</language>
		
	</languages>
	
	<administration>

		<files folder="admin">
			<folder>controllers</folder>
			<folder>language</folder>
			<folder>models</folder>
			<folder>tables</folder>
			<folder>views</folder>
			<filename>lan.php</filename>
			<filename>index.html</filename>
			<filename>access.xml</filename>
			<filename>config.xml</filename>
			<filename>install.mysql.sql</filename>
		</files>  
		
		<submenu>
			<!--
				Note that all & must be escaped to &amp; for the file to be valid
				XML and be parsed by the installer
			-->
			<menu link="option=com_lan" view="events" img="class:events"
				alt="LAN/Home">com_lan_home</menu>
			<menu link="option=com_categories&amp;extension=com_lan"
				view="categories" img="class:lan-categories" alt="LAN/Categories">com_lan_categories</menu>
			<menu link="option=com_lan&amp;view=competitions" 
				view="competitions" img="class:competitions" alt="LAN/Competitions">com_lan_competitions</menu>
			<menu link="option=com_lan&amp;view=events" 
				view="events" img="class:events" alt="LAN/Events">com_lan_events</menu>
			<menu link="option=com_lan&amp;view=players" 
				view="players" img="class:lan-players" alt="LAN/Players">com_lan_players</menu>
			<menu link="option=com_lan&amp;view=teams" 
				view="teams" img="class:lan-teams" alt="LAN/Players">com_lan_teams</menu>
		</submenu>
		
		<languages folder="admin">
			<language tag="en-GB">language/en-GB/en-GB.com_lan.ini</language>
			<language tag="en-GB">language/en-GB/en-GB.com_lan.sys.ini</language>
		</languages>
		
	</administration>
</extension>